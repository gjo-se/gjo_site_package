###########################################
#### CTYPE:  Parallax                  ####
###########################################

tt_content.parallax >
tt_content.parallax =< lib.contentElement
tt_content.parallax {

    ################
    ### TEMPLATE ###
    ################
    templateName = Parallax

    ##########################
    ### DATA PREPROCESSING ###
    ##########################

    dataProcessing {
#        10 = GjoSe\GjoSitePackage\DataProcessing\FlexFormProcessor
        20 = TYPO3\CMS\Frontend\DataProcessing\DatabaseQueryProcessor
        20 {
            table = tx_gjositepackage_content_element_item
            pidInList.field = pid
            where {
                data = field:uid
                intval = 1
                wrap = tt_content=|
            }
            orderBy = sorting
            dataProcessing {
                10 = TYPO3\CMS\Frontend\DataProcessing\FilesProcessor
                10 {
                    references.fieldName = background_image
                    as = backgroundImage
                }
                20 = TYPO3\CMS\Frontend\DataProcessing\FilesProcessor
                20 {
                    references.fieldName = image
                    as = images
                }
            }
        }
    }

}
